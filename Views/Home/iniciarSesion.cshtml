@{
    ViewData["Title"] = "Iniciar Sesión";
}
<link rel="stylesheet" href="/css/style.css">
<title>Iniciar Sesión</title>

<main class="iniciar-sesion">
    <section>
        <div>
            <h2>Iniciar sesión</h2>
            <form action='@Url.Action("comprobarDatos", "Usuario")' method="post">
                <input type="text" name="nombreUsuarioNuevo" placeholder="Nombre de usuario" required>
                <input type="password" name="password" placeholder="Contraseña" required>
                <input type="submit" value="Iniciar Sesión">

            </form>
            <p>¿No tenés un usuario?
                <a href='@Url.Action("registrarse", new { estado = "invisible" })'>Registrate</a>
            </p>
        </div>
    </section>
</main>
